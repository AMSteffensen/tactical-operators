{
  "name": "api-server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "postinstall:simple": "prisma generate && prisma db push",
    "dev": "tsx watch --ignore logs --ignore dist --ignore node_modules src/app.ts",
    "dev:smart": "../scripts/api-start.sh",
    "dev:init": "prisma db push && npm run dev",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && tsc",
    "start": "node dist/app.js",
    "start:production": "node dist/app.js",
    "test": "vitest",
    "lint": "eslint . --ext .ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/database/seeds/index.ts",
    "dev:seed": "tsx scripts/create-dev-user.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.3.0",
    "@types/csurf": "^1.11.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.3.0",
    "socket.io": "^4.7.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.45.0",
    "supertest": "^6.3.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2",
    "vitest": "^0.34.0"
  }
}

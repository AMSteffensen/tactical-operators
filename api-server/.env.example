# Database
# For local development (non-Docker)
DATABASE_URL="postgresql://username:STRONG_PASSWORD@localhost:5432/tactical_operator"
# For Docker development (uncomment the line below and comment the line above)
# DATABASE_URL="postgresql://tactical_user:CHANGE_THIS_PASSWORD@localhost:5432/tactical_operator"

# Server
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHAR_HEX_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
